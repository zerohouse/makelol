{
	"mapping" : {
		"mappings" : ["/api/*", "/user/*"],
		"characterEncoding" : "UTF-8",
		"url":"localhost:8080",
		"controllerPackage" : "me.controllers",
		"jspPath" : "/WEB-INF/jsp/"
	},
	"logger" : {
		"level" : "ALL",
		"logFilePath" : "/log/",
		"pattern" : "%level [%thread] %msg - %logger{10} : %file:%line %date%n"
	},
	"database" : {
        "modelPackage" : "me.model",
        "testDataPackage" : "me.model.test",
        "connectionSetting" : {
			"jdbcUrl" : "jdbc:mysql://localhost:3306/mydb?useUnicode=true&characterEncoding=utf8",
        	"username" : "root",
        	"password" : "",
        	"minConnectionsPerPartition" : 5,
			"maxConnectionsPerPartition" : 10,
			"setPartitionCount" : 1
        	},
		"createOption" : {
		    "createTablesOnServerStart" : true,
        	"resetTablesOnServerStart" : false,
        	"insertDataOnServerStart" : true,
			"table_suffix" : "ENGINE = InnoDB DEFAULT CHARACTER SET utf8",
			"stringOptions" : {
				"DATATYPE" : "VARCHAR(255)",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : ""
			},
			"integerOptions" : {
				"DATATYPE" : "INTEGER",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : "0"
			},
			"booleanOptions" : {
				"DATATYPE" : "TINYINT(1)",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : "0"
			},
			"dateOptions" : {
				"DATATYPE" : "DATETIME",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : "CURRENT_TIMESTAMP"
			},
			"floatOptions" : {
				"DATATYPE" : "FLOAT",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : "0"
			},
			"longOptions" : {
				"DATATYPE" : "BIGINT",
				"NOT NULL" : true,
				"hasDefaultValue" : true,
				"DEFAULT" : "0"
			}
		}
	}
}